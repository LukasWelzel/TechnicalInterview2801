<Window x:Class="NetzschLocalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetzschLocalApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="inStringTB" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="{Binding inText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="524" Height="60" />
        <TextBox x:Name="outStringTB" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" Text="{Binding outText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="524" Height="59" LostFocus="outStringTB_LostFocus" />

    </Grid>
</Window>
